<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Employee Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-light bg-light justify-content-between px-4">
        <% nav.forEach(item => { %>
            <a class="navbar-brand" href="<%= item.link %>"><%= item.name %></a>
        <% }); %>
    </nav>

    <div class="container mt-4">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% employees.forEach(emp => { %>
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title"><strong>Name:</strong> <%= emp.name %></h5>
                        <p class="card-text"><strong>Designation:</strong> <%= emp.designation %></p>
                        <p class="card-text"><strong>Location:</strong> <%= emp.location %></p>
                        <p class="card-text"><strong>Salary:</strong> â‚¹<%= emp.salary %></p>
                    </div>
                    <div class="m-2">
                        <a href="/api/edit/<%= emp._id %>" class="btn btn-warning btn-sm">Edit</a>
                        <form action="/api/delete/<%= emp._id %>?_method=DELETE" method="post" style="display:inline;">
                            <button class="btn btn-danger btn-sm" onclick="return confirm('Delete this employee?')">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
